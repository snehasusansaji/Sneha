#include <stdio.h>
void main()
{
  int i,j,mat[2][2],r=0,c=0;
  printf("Enter the matrix elements\n");
  for(i=0;i<2;i++)
  {
    for(j=0;j<2;j++)
    {
      scanf("%d",&mat[i][j]);
    }
  }
  printf("The sum of row elements ");
  for(i=0;i<2;i++)
  {
    for(j=0;j<2;j++)
    {
      r+=mat[i][j];
      }
      printf("\nR%d = %d",i+1,r);
      r=0;
  }
  printf("\nThe sum of column elements");
  for(j=0;j<2;j++)
  {
    for(i=0;i<2;i++)
    {
      c+=mat[i][j];
       }
       printf("\n%d = %d",i+1,c);
       c=0;
  }
 
}
